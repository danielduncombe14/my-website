{
  "buildCommand": "npm run build",
  "env": {
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
    },
    {
      "src": "/(?!api)(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot|json)$)",
      "dest": "/public/$1"
    },
    {
      "src": "/(?!api)(.*)",
      "dest": "/public/index.html"
    }
  ]
}
